<!doctype html>
<html ng-app="app">
<head>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular-touch.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular-animate.js"></script>
    <script src="http://ui-grid.info/docs/grunt-scripts/csv.js"></script>
    <script src="http://ui-grid.info/docs/grunt-scripts/pdfmake.js"></script>
    <script src="http://ui-grid.info/docs/grunt-scripts/vfs_fonts.js"></script>
    <script src="~/Scripts/ui-grid/release/ui-grid-unstable.js"></script>
    <link rel="styleSheet" href="~/Scripts/ui-grid/release/ui-grid-unstable.css" />
    <script src="~/Scripts/app.js"></script>
    <style>
        
         html,
         body {
             margin:0;
             padding:0;
             height:100%;
         }
        .grid {
            width: 1000px;
            height: 260px;
            font-size: 10pt;
        }


        .row-supply-header {
            color: lightcoral;
        }

        .row-target {
            color: saddlebrown;
      
        }

        .row-ending-inventory {
            color: green;
        }

        .row-total {
            color: violet;
        }

        .row-adjustment-header {
            color: blue;
        }

        .row-supply-detail {
            color: orange;
        }

        #container {
            min-height:100%;
            position:relative;
        }

        #top {
            position: fixed;
            top: 0;
            width: 100%;
            height: 45px;
            background-color: #6cf;
        }

        #grid-container {
            position: fixed;
            top: 45px;
            bottom: 130px;
            width: 1050px; 
            overflow-y: auto
        }

        #bottom {
            position:absolute;
            bottom:0;
            width:100%;
            height:130px;
            background:#6cf;
        }
    </style>
</head>
<body>
  
        @RenderBody()
       
</body>
</html>